{
  "name": "bbot",
  "version": "0.0.0",
  "description": "An adaptable chatbot framework with a conversational core.",
  "main": "dist/index.js",
  "repository": "git@github.com:Amazebot/bbot.git",
  "author": "timkinnane <timkinnane@gmail.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "chatbot",
    "chat",
    "ai",
    "nlp",
    "nlu",
    "chatops",
    "messaging",
    "conversation",
    "CUI",
    "typescript"
  ],
  "files": [
    "dist",
    "package.json"
  ],
  "engines": {
    "node": "> 8.0.0",
    "npm": "> 5.0.0"
  },
  "bot": {
    "alias": "bbot"
  },
  "scripts": {
    "lint": "tslint -p .",
    "pretest": "yarn lint",
    "test": "nyc mocha './src/lib/**/*.spec.ts'",
    "test:hook": "mocha './**/*.spec.ts'",
    "test:debug": "mocha  --inspect --debug-brk 'src/**/*.spec.ts'",
    "test:package": "preview && mocha 'src/*.spec.ts'",
    "docs": "rimraf ./docs/* && typedoc --options ./typedoc.json ./src",
    "prebuild": "npm run test",
    "build": "rimraf ./dist/* && tsc && npm run test:package",
    "local": "ts-node -r dotenv/config src/start",
    "start": "node -r dotenv/config dist/start"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test:hook"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/mock-fs": "^3.6.30",
    "@types/sinon": "^4.3.1",
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^5.0.1",
    "husky": "^0.14.3",
    "mocha": "^5.0.1",
    "mock-fs": "^4.4.2",
    "nyc": "^11.4.1",
    "package-preview": "^1.0.5",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.2",
    "source-map-support": "^0.5.3",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "0.8.0",
    "typedoc-plugin-external-module-name": "^1.1.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "@types/mongoose": "^5.0.14",
    "@types/node": "^9.4.6",
    "@types/winston": "^2.3.8",
    "@types/yargs": "^11.0.0",
    "inquirer": "^6.0.0",
    "mongoose": "^5.1.2",
    "redis": "^2.8.0",
    "winston": "^2.4.1",
    "yargs": "^11.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
