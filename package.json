{
  "name": "root",
  "version": "0.0.0",
  "description": "Mono-repo for bBot core, starter kit and adapter packages.",
  "homepage": "http://bbot.chat",
  "repository": "git@github.com:Amazebot/bbot.git",
  "author": "Tim Kinnane <tim.kinnane@amazebot.chat>",
  "license": "MIT",
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "scripts": {
    "example": "node ./packages/bbot-examples/index.js",
    "lint": "tslint -p .",
    "setup": "yarn install && yarn bootstrap && yarn compile",
    "test": "yarn lint && nyc mocha ./packages/**/*.spec.ts",
    "test:unit": "mocha ./packages/**/*.spec.ts",
    "test:debug": "mocha --inspect --debug-brk ./packages/**/*.spec.ts",
    "test:coverage": "set -o allexport; source .env; set +o allexport; codecov",
    "test:checkup": "cd ./packages/bbot-doctor && node src/index.js checkup",
    "bootstrap": "del ./packages/*/node_modules && lerna bootstrap",
    "compile": "tsc -b .",
    "build": "yarn bootstrap && yarn compile && yarn test",
    "docs": "del ./docs && typedoc --options ./typedoc.json ./packages/bbot",
    "release": "./scripts/release-public.sh",
    "bump": "lerna version",
    "bump:next": "lerna version --npm-tag next",
    "release:local": "./scripts/release-local.sh",
    "release:doctor": "./scripts/release-doctor.sh",
    "rollback": "./scripts/release-rollback.sh",
    "local": "ts-node packages/bbot/src/start",
    "start": "node packages/bbot/lib/start"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^7.0.3",
    "axios": "^0.18.0",
    "bbot": "^1.4.0",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^1.1.0",
    "lerna": "^3.10.5",
    "marked": "^0.6.1",
    "marked-terminal": "^3.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.9",
    "nyc": "^14.0.0",
    "sinon": "^7.2.2",
    "slack-mock": "^1.1.1",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.1.0",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.0"
  }
}
