{
  "name": "bbot",
  "version": "1.4.0",
  "description": "An adaptable chatbot framework with a conversational core.",
  "homepage": "http://bbot.chat",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:Amazebot/bbot.git",
  "author": "Tim Kinnane <tim.kinnane@amazebot.chat>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "chatbot",
    "chat",
    "ai",
    "nlp",
    "nlu",
    "chatops",
    "messaging",
    "conversation",
    "CUI",
    "typescript"
  ],
  "files": [
    "dist",
    "package.json"
  ],
  "engines": {
    "node": "> 8.0.0",
    "npm": "> 5.0.0"
  },
  "bot": {
    "alias": "bb"
  },
  "scripts": {
    "lint": "tslint -p .",
    "pretest": "yarn lint",
    "test": "nyc mocha **/*.spec.ts",
    "test:bail": "mocha src/**/*.spec.ts --bail",
    "test:debug": "mocha --inspect --debug-brk src/**/*.spec.ts",
    "test:watch": "nodemon --exec 'yarn test:bail --silent || true'",
    "test:coverage": "set -o allexport; source .env; set +o allexport; codecov",
    "docs": "rimraf ./docs && typedoc --options ./typedoc.json ./src",
    "docs:clone": "rimraf gh-pages && git clone $npm_package_repository_url gh-pages",
    "docs:branch": "cd gh-pages && git checkout gh-pages || git checkout --orphan gh-pages && git rm -rf .",
    "docs:copy": "cp -a docs/. gh-pages/. && mkdir -p gh-pages/.circleci && cp -a .circleci/. gh-pages/.circleci/.",
    "docs:commit": "cd gh-pages && git add -A && git commit -m \"docs(api): Automated update to Github Pages\" --allow-empty",
    "docs:push": "cd gh-pages && git push origin gh-pages",
    "docs:publish": "yarn docs && yarn docs:clone && yarn docs:branch && yarn docs:copy && yarn docs:commit && yarn docs:push",
    "compile": "rimraf ./dist/* && tsc",
    "prebuild": "yarn test",
    "build": "yarn compile",
    "build:watch": "nodemon --exec 'yarn compile || true'",
    "stage": "git add -A && git status -s",
    "commit": "git-cz",
    "prerelease": "yarn build",
    "release": "standard-version",
    "release:pre": "yarn release -- --prerelease",
    "release:dry": "yarn release -- --dry-run",
    "local": "ts-node src/start",
    "start": "node dist/start"
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/sinon": "^5",
    "axios": "0.18.0",
    "chai": "^4",
    "codecov": "^3",
    "commitizen": "^3",
    "cz-conventional-changelog": "^2",
    "mocha": "^5",
    "nodemon": "^1",
    "nyc": "^13",
    "rimraf": "^2",
    "sinon": "^7",
    "ts-node": "^7",
    "tslint": "^5",
    "tslint-config-standard": "^8",
    "typedoc": "^0.13",
    "typedoc-plugin-external-module-name": "^1",
    "typescript": "^3"
  },
  "dependencies": {
    "@rocket.chat/sdk": "0.2.9",
    "@types/inquirer": "^0",
    "@types/koa": "^2",
    "@types/koa-router": "^7",
    "@types/mongoose": "^5",
    "@types/node": "^10",
    "@types/request": "^2",
    "@types/yargs": "^12",
    "chalk": "^2",
    "dotenv": "^6",
    "inquirer": "^6",
    "koa": "^2",
    "koa-body": "^4",
    "koa-router": "^7",
    "mongoose": "^5",
    "request": "^2",
    "to-regex-range": "^4",
    "winston": "^3",
    "yargs": "^12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
